<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.assignment1cs412.MainActivity">

    <!--  <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
-->
    <Button
        android:id="@+id/Guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_column="12"
        android:layout_row="2"
        android:backgroundTint="@android:color/holo_green_light"
        android:elevation="0dp"
        android:onClick="onClick"
        android:text="@string/guess" />

    <Button
        android:id="@+id/Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="2"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/skip" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/question"
        android:textAllCaps="true"
        android:typeface="serif" />

    <TextView
        android:id="@+id/userPoints"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:gravity="center"
        android:text="@string/points"
        android:layout_above="@+id/Guess"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:id="@+id/userGuess"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userPoints"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="116dp"
        android:layout_marginRight="116dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Guess"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userPoints"
        android:layout_alignBottom="@+id/userPoints"
        android:layout_alignStart="@+id/userGuess"
        android:gravity="right"
        android:text="Points:" />

    <!-- </GridLayout>  -->

</RelativeLayout>
